page {
  position: relative;
}

.scroll-container {
  width: 100%;
  height: 100%;
  padding-bottom: 100rpx;
  
}


.tab {
  float: left;
  width: 50%;
  text-align: center;
  align-items: center;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ccc;
}
 
.topTabSwiper {
  zoom: 1;
  height: 40px;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 1px solid #f00;
  color: white;
  background:#43468C;
}
 
.swiper {
  width: 100%;
}
 
.swiper_con {
  width: 100%;
  height: 100%;
  padding: 80rpx 0;
  background-color: #f00;
}

.bottom-container {
  position: fixed;
  height: 60px;
  width: 100%;
  background-color: #fff;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.bottom-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.bottom-item-image {
  width: 35rpx;
  height: 35rpx;
}



.title {
  align-items: center;
  margin-left: 32rpx;
  font-size: 32rpx;
  color: #444;
  display: flex;
  height: 100rpx;
}

.item-line {
  background: #e4dfdf;
  width: 100%;
  height: 1rpx;
}

.item {
  width: 100%;
  height: 100rpx;
  background: white;
  display: flex;
  align-items: center;
  margin-top: 1rpx;
  position: relative;
}

.item-left {
  font-size: 32rpx;
  color: black;
  margin-left: 32rpx;
  position: absolute;
  left: 0;
}

.item-right {
  align-items: center;
  margin-right: 32rpx;
  position: absolute;
  right: 0;
  display: flex;
}

.item-time {
  height: 100rpx;
  flex-direction: column;
  display: flex;
}

.text-top {
  margin-top: 5rpx;
  flex: 1;
  font-size: 28rpx;
  color: #535457;
}

.text-bottom {
  flex: 1;
  font-size: 28rpx;
  color: #535457;
}

.item-middle {
  margin-left: 200rpx;
  font-size: 32rpx;
  color: gray;
  text-align: center;
}

.btn-linear {
  width: 100%;
  height: 140rpx;
  display: flex;
  position: relative;
}

.btn-left {
  position: absolute;
  left: 0;
  height: 100%;
  width: 43%;
  margin-left: 32rpx;
}

.btn-right {
  position: absolute;
  right: 0;
  height: 100%;
  width: 43%;
  margin-right: 32rpx;
}

.btn-image {
  width: 100%;
  height: 100%;
}

.text-right {
  font-size: 32rpx;
  color: #616161;
}


.text-green {
  color: green;
  font-size: 32rpx;
}

.text-blue {
  color: blue;
  font-size: 32rpx;
}

.item-left-image {
  width: 45rpx;
  height: 45rpx;
  margin-left: 32rpx;
}



.bottom-item-left {
  position: absolute;
  margin-left: 80rpx;
  left: 0;
  display: flex;
  align-items: center;
}

.bottom-item-right {
  position: absolute;
  margin-right: 80rpx;
  right: 0;
  display: flex;
  align-items: center;
}


.image-arrow {
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
}

.backup-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /* justify-content: space-between; */
  overflow-y: auto;
  height: 400rpx;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.backup-item {
  height: 160rpx;
  width: 33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.backup-item-img {
  height: 67rpx;
  width: 59rpx;
  margin-bottom: 10rpx;
}

.backup-item-name {
  font-size: 32rpx;
  color: #000;
}

.backup-item-hover {
  background-color: #eee;
}

.backup-item-selected {
  background-color: #eee;
}


.shizhong {
  text-align: center;
  background: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  position: relative;
}

.shizhong .image {
  width: 400rpx;
  height: 400rpx;
}

.daojishi {
  width: 300rpx;
  height: 100rpx; 
  font-size: 60rpx;
  font-weight: bold;
  color: white;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  text-align: center;
}


.imgbtn {
  width: 300rpx;
  height: 100rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}