.ins-container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 32rpx;
  box-sizing:border-box;
}

.ins-scroll {
  width: 100%;
  height: 100%;
}

.ins-title {
  font-weight: bold;
  word-break:break-all;
  font-size: 32rpx;
  color: #444;
  display: flex;
  margin-top: 10rpx;
  line-height: 45rpx;
}

.ins-content {
  word-break:break-all;
  font-size: 32rpx;
  color: #444;
  display: flex;
  line-height: 50rpx;
}

.insImgParent {
  margin-top: 15rpx;
  align-items: center;
  display: flex;
  justify-content: center;
}